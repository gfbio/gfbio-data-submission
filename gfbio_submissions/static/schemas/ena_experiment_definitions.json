            "Illumina HiSeq 2500",
            "Illumina HiSeq 2000",
            "Illumina HiSeq 1000",
            "Illumina MiSeq",
            "Illumina HiScanSQ"
        ]
    },
    "helicos": {
        "type": "string",
        "enum": [
            "Helicos HeliScope"
        ]
    },
    "abi_solid": {
        "type": "string",
        "enum": [
            "AB SOLiD System",
