            "AB SOLiD 4 System",
            "AB SOLiD 4hq System",
            "AB SOLiD PI System",
            "AB 5500 Genetic Analyzer",
            "AB 5500xl Genetic Analyzer"
        ]
    },
    "complete_genomics": {
        "type": "string",
        "enum": [
            "Complete Genomics"
        ]
    },
    "pacbio_smrt": {
        "type": "string",
        "enum": [
            "PacBio RS"
        ]
    },
    "ion_torrent": {
        "type": "string",
        "enum": [
            "Ion Torrent PGM",
            "Ion Torrent Proton"
        ]
    },
    "capillary": {
        "type": "string",
        "enum": [
            "AB 3730xL Genetic Analyzer",
            "AB 3730 Genetic Analyzer",
            "AB 3500xL Genetic Analyzer",
            "AB 3500 Genetic Analyzer",
            "AB 3130xL Genetic Analyzer",
            "AB 3130 Genetic Analyzer",
            "AB 310 Genetic Analyzer"
        ]
    },
    "platform": {
        "oneOf": [
            {
                "$ref": "#/ls454"
            },
            {
                "$ref": "#/illumina"
            },
            {
                "$ref": "#/helicos"
            },
            {
                "$ref": "#/abi_solid"
            },
            {
                "$ref": "#/complete_genomics"
            },
            {
                "$ref": "#/pacbio_smrt"
            },
            {
                "$ref": "#/ion_torrent"
            },
            {
                "$ref": "#/capillary"
            }
        ]
    },
    "single": {
        "type": "object",
        "properties": {
            "layout_type": {
                "type": "string",
                "enum": [
                    "single"
                ]
            }
        },
        "required": [
            "layout_type"
        ]
    },
    "paired": {
        "type": "object",
        "properties": {
            "layout_type": {
                "type": "string",
                "enum": [
                    "paired"
                ]
            },
            "nominal_length": {
                "type": "integer",
                "minimum": 0,
                "exclusiveMinimum": true
            },
            "nominal_sdev": {
                "type": "number"
            }
        },
        "required": [
            "layout_type",
            "nominal_length"
        ]
    },
    "library_descriptor": {
        "type": "object",
        "properties": {
            "library_strategy": {
                "type": "string",
                "enum": [
                    "WGS",
                    "WGA",
                    "WXS",
                    "RNA-Seq",
                    "miRNA-Seq",
                    "ncRNA-Seq",
                    "WCS",
                    "CLONE",
                    "POOLCLONE",
                    "AMPLICON",
                    "CLONEEND",
                    "FINISHING",
                    "ChIP-Seq",
                    "MNase-Seq",
                    "DNase-Hypersensitivity",
                    "Bisulfite-Seq",
                    "EST",
                    "FL-cDNA",
                    "CTS",
                    "MRE-Seq",
                    "MeDIP-Seq",
                    "MBD-Seq",
                    "Tn-Seq",
                    "VALIDATION",
                    "FAIRE-seq",
                    "SELEX",
                    "RIP-Seq",
                    "ChIA-PET",
                    "OTHER"
                ]
            },
            "library_source": {
                "type": "string",
                "enum": [
                    "GENOMIC",
                    "TRANSCRIPTOMIC",
                    "METAGENOMIC",
                    "METATRANSCRIPTOMIC",
                    "SYNTHETIC",
                    "VIRAL RNA",
                    "OTHER"
                ]
            },
            "library_selection": {
                "type": "string",
                "enum": [
                    "RANDOM",
                    "PCR",
                    "RANDOM PCR",
                    "RT-PCR",
                    "HMPR",
                    "MF",
                    "repeat fractionation",
                    "size fractionation",
                    "MSLL",
                    "cDNA",
                    "ChiP",
                    "MNase",
                    "DNase",
                    "Hybrid Selection",
                    "Reduced Representation",
                    "Restriction Digest",
                    "5-methylcytidine antibody",
                    "MBD2 protein methyl-CpG binding domain",
                    "CAGE",
                    "RACE",
                    "MDA",
                    "padlock probes capture method",
                    "other",
                    "unspecified"
                ]
            },
            "library_layout": {
                "oneOf": [
                    {
                        "$ref": "#/single"
                    },
                    {
                        "$ref": "#/paired"
                    }
                ]
            }
        },
        "required": [
            "library_strategy",
            "library_source",
            "library_selection",
            "library_layout"
        ]
    },
    "design": {
        "type": "object",
        "properties": {
            "sample_descriptor": {
                "type": "string",
                "minLength": 1
            },
            "design_description": {
                "type": "string"
            },
            "library_descriptor": {
                "$ref": "#/library_descriptor"
            }
        },
        "required": [
            "library_descriptor",
            "sample_descriptor"
        ]
    },
    "files": {
        "type": "object",
        "properties": {
            "forward_read_file_name": {
                "type": "string"
            },
            "forward_read_file_checksum": {
                "type": "string"
            },
            "reverse_read_file_name": {
                "type": "string"
            },
            "reverse_read_file_checksum": {
                "type": "string"
            }
        },
        "required": [
            "forward_read_file_name"
        ]
    },
    "experiment": {
        "type": "object",
        "properties": {
            "experiment_alias": {
                "type": "string",
                "minLength": 1
            },
            "platform": {
                "$ref": "#/platform"
            },
            "design": {
                "$ref": "#/design"
            },
            "files": {
                "$ref": "#/files"
            }
        },
        "required": [
            "experiment_alias",
            "platform",
            "design"
        ]
    },
    "experiment_array": {
        "type": "object",
        "properties": {
            "experiments": {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                    "$ref": "#/experiment"
                }
            }
        },
        "required": [
            "experiments"
        ]
    }
}