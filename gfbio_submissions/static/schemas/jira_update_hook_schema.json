{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "file:///app/gfbio_submissions/brokerage/schemas/jira_update_hook_schema.json",
    "type": "object",
    "properties": {
        "key": {
            "type": "string"
        },
        "user": {
            "type": "object",
            "properties": {
                "emailAddress": {
                  "type": "string"
                }
            }
        },
        "issue": {
            "type": "object",
            "properties": {
                "fields": {
                    "type": "object",
                    "properties": {
                        "customfield_10200": {
                            "type": "string",
                            "minLength": 10
                        },
                        "customfield_10303": {
                            "type": "string",
                            "pattern": "^\\b(uuid:){0,1}\\s*([a-f0-9\\\\-]*){1}\\s*$"
                        }
                    },
                    "required": [
                        "customfield_10200",
                        "customfield_10303"
                    ]
                }
            },
            "required": [
                "key",
                "fields"
            ]
        },
        "changelog": {
            "type": "object",
            "properties": {
                "items": {
                    "type": "array",
                    "minItems": 1
                }
            },
            "required": [
                "items"
            ]
        }
    },
    "required": [
        "user",
        "issue",
        "changelog"
    ]
}
