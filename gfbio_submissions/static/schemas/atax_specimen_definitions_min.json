{
    "atax_specimen": {
        "type": "object",
        "properties": {
            "specimen identifier": {
                "type": "string",
                "minLength": 1
            },
            "basis of record": {
                "type": "string"
            },
            "scientific name": {
                "type": "string"
            }
        },
        "required": [
            "specimen identifier",
            "basis of record",
			"scientific name"
        ]
    },
    "atax_specimen_array": {
        "type": "object",
        "properties": {
            "atax_specimens": {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                    "$ref": "#/atax_specimen"
                }
            }
        },
        "required": [
            "atax_specimens"
        ]
    }
}

