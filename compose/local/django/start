#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset


python manage.py migrate
python manage.py collectstatic --noinput

# TODO: bucket name should be configurable, url also
s3fs gfbio-dev-1 /mnt/s3bucket -o passwd_file=/etc/passwd-s3fs -o use_path_request_style -o url=https://s3.gwdg.de

exec python manage.py runserver_plus 0.0.0.0:8000

